<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ImageLoader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.ImageLoader" parent="Base.Theme.ImageLoader" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_app_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.ImageLoader</item>
    </style>

</resources>